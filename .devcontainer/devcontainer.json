{
  "build": { "dockerfile": "Dockerfile" },
  "hostRequirements": {
    "cpus": 2
  },
  "waitFor": "onCreateCommand",
  "customizations": {
    "codespaces": {
      "openFiles": []
    },
    "vscode": {
      "extensions": [
        "ms-toolsai.jupyter",
        "ms-python.python",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
	"mounts": [
		"source=${localEnv:HOME}/.ssh,target=/home/appuser/.ssh,type=bind,readonly"
	],
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/lemvi-rm,type=bind",
  "postStartCommand": "jupyter notebook --allow-root --ip=0.0.0.0 --port=888 --no-browser /workspaces/lemvi-rm"
}
