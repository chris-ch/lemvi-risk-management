{
  "build": { "dockerfile": "Dockerfile" },
  "hostRequirements": {
    "cpus": 2
  },
  "waitFor": "onCreateCommand",
  "postCreateCommand": "curl -sSL https://install.python-poetry.org | python3 -",
  "customizations": {
    "codespaces": {
      "openFiles": []
    },
    "vscode": {
      "extensions": [
        "ms-toolsai.jupyter",
        "ms-python.python",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
	"mounts": [
		"source=${localEnv:HOME}/.ssh,target=/home/appuser/.ssh,type=bind,readonly"
	]
}

